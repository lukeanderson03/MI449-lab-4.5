---
title: Liquid Layout
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/styles/screen.css">
  <script src="https://unpkg.com/scrollreveal"></script>
</head>
<header>
  <h1>
  {{ title }}
  </h1>
</header>
<body>
 {{ content }}
  <script>
    const slideUp = {
      distance: '150%',
      origin: 'bottom',
      opacity: null,
      duration: '800',
      easing: 'ease'
    };
    ScrollReveal().reveal('h1', { duration: '800' });
    ScrollReveal().reveal('.planet', slideUp);
    ScrollReveal().reveal('.star', slideUp);
  </script>
</body>
<footer>
  <img src="images/rocket-ship.svg" alt="rocket ship">
</footer>
</html>